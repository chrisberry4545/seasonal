{
    "compilerOptions": {
      "outDir": "dist",
      "target": "es2015",
      "module": "commonjs",
      "declaration": true,

      "strict": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "strictFunctionTypes": true,
      "noImplicitThis": true,
      "alwaysStrict": true,

      "noUnusedLocals": true,
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true,

      "resolveJsonModule": true,
      "esModuleInterop": true,
      "skipLibCheck": true
    }
  }
