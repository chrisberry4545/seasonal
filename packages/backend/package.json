{
  "name": "@chrisb-dev/seasonal-backend",
  "version": "1.0.0",
  "private": true,
  "description": "",
  "main": "index-dev.ts",
  "engines": {
    "node": ">=8.10.0",
    "npm": ">=6.4.1"
  },
  "config": {
    "app": "index-dev.ts"
  },
  "scripts": {
    "start": "yarn dev",
    "dev": "ENV=dev && yarn copy-env && yarn copy-sql && concurrently \"yarn dev:watch\" \"yarn watch-sql\" --kill-others",
    "dev:watch": "tsc-watch --onSuccess \"node ./dist/index-dev.js\" --noClear",
    "ci": "yarn copy-sql && tsc-watch --onSuccess \"node ./dist/index-dev.js\"",
    "build": "tsc && yarn copy-env && yarn copy-sql",
    "copy-env": "node ./copy-env.js",
    "watch-sql": "onchange 'src/**/*.sql' -- yarn copy-sql",
    "copy-sql": "mkdir -p dist/src && cp -r ./src/sql/ ./dist/src/sql/",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "deploy": "serverless deploy --stage prod"
  },
  "author": "Chris Berry <chrisberry4545@googlemail.com> (http://chrisbdev.com)",
  "license": "ISC",
  "dependencies": {
    "@chrisb-dev/seasonal-shared-models": "1.0.0",
    "@types/bcrypt": "^3.0.0",
    "@types/body-parser": "^1.17.1",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.0",
    "@types/helmet": "0.0.43",
    "@types/jsonwebtoken": "^8.3.7",
    "@types/passport": "^1.0.2",
    "@types/passport-jwt": "^3.0.3",
    "@types/passport-local": "^1.0.33",
    "@types/pg": "^7.11.2",
    "@types/promise-fs": "^2.1.0",
    "@types/winston": "^2.4.4",
    "bcrypt": "^3.0.7",
    "body-parser": "^1.19.0",
    "cookie-parser": "^1.4.5",
    "copyfiles": "^2.2.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "helmet": "^3.18.0",
    "jsonwebtoken": "^8.5.1",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pg": "^7.12.1",
    "promise-fs": "^2.1.1",
    "serverless": "^1.66.0",
    "serverless-http": "^2.0.2",
    "typescript": "^3.7.2",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/jest": "^24.0.13",
    "@types/supertest": "^2.0.7",
    "concurrently": "^5.0.2",
    "env-yaml": "^0.1.2",
    "jest": "24.9.0",
    "onchange": "^6.1.0",
    "serverless-plugin-monorepo": "^0.8.0",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.5.4",
    "tsc-watch": "^4.0.0"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "./tests/setup.ts"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json",
      "ts",
      "tsx"
    ],
    "transform": {
      "\\.ts$": "<rootDir>/../../node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": ".*spec.ts$"
  }
}
