{
  "name": "season",
  "version": "1.0.0",
  "private": true,
  "description": "Eat Seasonal",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chrisberry4545/seasonal.git"
  },
  "author": "Chris Berry",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/chrisberry4545/seasonal/issues"
  },
  "homepage": "https://github.com/chrisberry4545/seasonal#readme",
  "dependencies": {
    "rxjs": "^6.4.0"
  },
  "devDependencies": {
    "@chrisb-dev/tslint": "^1.0.1",
    "concurrently": "^5.0.2",
    "lerna": "^3.20.2",
    "pre-commit": "^1.2.2",
    "tslint": "^5.17.0",
    "typescript": "^3.7.2"
  },
  "scripts": {
    "postinstall": "yarn shared:build && yarn shared-frontend-components:build && yarn bootstrap",
    "lint": "tslint -c tslint.json 'packages/*/src/**/*.ts{,x}'",
    "bootstrap": "lerna bootstrap",
    "shared-frontend-components:build": "yarn workspace @chrisb-dev/seasonal-shared-frontend-components build",
    "shared-frontend-components:dev": "yarn workspace @chrisb-dev/seasonal-shared-frontend-components dev",
    "shared:build": "yarn workspace @chrisb-dev/seasonal-shared build",
    "shared:dev": "yarn workspace @chrisb-dev/seasonal-shared dev",
    "backend:test": "yarn workspace @chrisb-dev/seasonal-backend test",
    "backend:dev": "PORT=5200 yarn workspace @chrisb-dev/seasonal-backend dev",
    "frontend:dev-only": "PORT=5201 REACT_APP_BACKEND_URL=http://localhost:5200/v2 yarn workspace @chrisb-dev/seasonal-frontend dev",
    "frontend:dev": "concurrently \"yarn frontend:dev-only\" \"yarn backend:dev\" \"yarn shared-frontend-components:dev\" \"yarn shared:dev\" --kill-others",
    "frontend:deploy": "yarn workspace @chrisb-dev/seasonal-frontend deploy",
    "frontend-admin:dev-only": "PORT=5202 REACT_APP_BACKEND_URL=http://localhost:5200/admin yarn workspace @chrisb-dev/seasonal-frontend-admin dev",
    "frontend-admin:dev": "concurrently \"yarn frontend-admin:dev-only\" \"yarn backend:dev\" \"yarn shared-frontend-components:dev\" \"yarn shared:dev\" --kill-others",
    "frontend-admin:deploy": "yarn workspace @chrisb-dev/seasonal-frontend-admin deploy",
    "mobile:dev": "concurrently \"BACKEND_URL=http://localhost:5200/v2 yarn workspace @chrisb-dev/seasonal-mobile start\" \"yarn shared:dev\"",
    "mobile:prod": "yarn workspace @chrisb-dev/seasonal-mobile start",
    "docker:database:dev": "docker-compose up -d postgres-dev && docker-compose logs --follow",
    "docker:backend:dev": "docker-compose up -d backend-dev && docker-compose logs --follow",
    "docker:backend:test": "./tests/backend-run-functional-tests.sh",
    "docker:frontend:dev": "docker-compose up -d frontend-dev && docker-compose logs --follow"
  },
  "pre-commit": [
    "lint"
  ],
  "workspaces": {
    "packages": [ "packages/*"]
  }
}
