{
  "name": "seasonal-backend",
  "version": "1.0.0",
  "description": "",
  "main": "index-dev.ts",
  "engines": {
    "node": ">=8.10.0",
    "npm": ">=6.4.1"
  },
  "config": {
    "app": "index-dev.ts"
  },
  "scripts": {
    "start": "npm run dev",
    "dev": "concurrently \"npm run copy-env\" \"tsc -w\" \"nodemon dist/index-dev.js\"",
    "build": "tsc && npm run copy-env",
    "copy-env": "cp .env.yml dist/.env.yml",
    "move-dist-to-top-level": "cp -r ./dist/* ./",
    "lint": "tslint -c tslint.json 'src/**/*.ts'"
  },
  "author": "Chris Berry <chrisberry4545@googlemail.com> (http://chrisbdev.com)",
  "license": "ISC",
  "dependencies": {
    "@chrisb-dev/seasonal-shared": "1.2.1",
    "@types/express": "^4.16.1",
    "@types/helmet": "0.0.43",
    "@types/jest": "^24.0.11",
    "airtable": "^0.5.7",
    "express": "^4.16.4",
    "helmet": "^3.15.0",
    "jest": "^24.5.0",
    "serverless-http": "^1.9.1",
    "typescript": "^3.3.3333"
  },
  "devDependencies": {
    "@chrisb-dev/tslint": "^1.0.1",
    "@types/supertest": "^2.0.7",
    "concurrently": "^4.1.0",
    "env-yaml": "^0.1.2",
    "nodemon": "^1.18.7",
    "pre-commit": "^1.2.2",
    "supertest": "^4.0.0",
    "ts-jest": "^24.0.0",
    "tslint": "^5.14.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json",
      "ts",
      "tsx"
    ],
    "transform": {
      "\\.ts$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": ".*spec.ts$"
  },
  "pre-commit": [
    "lint"
  ]
}
