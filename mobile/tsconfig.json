{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es5",
    "lib": ["es2015", "esnext.asynciterable"],
    "module": "commonjs",
    "allowJs": true,
    "jsx": "react-native",

    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "alwaysStrict": true,

    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  }
}
